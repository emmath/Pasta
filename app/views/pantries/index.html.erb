<h1>PASTA TIME!</h1>

<div id="pantries">
  <%= render @pantries %>
</div>
<div class="clear"></div>


<% @pantries.each do |pantry| %>
  <div class="pantry">
    <h2><%= link_to pantry.name, pantry %></h2>
    Pasta Time: <%= pantry.name %>
  </div>
<% end %>

<%= direct_upload_form_for @uploader do |f| %>
  <p><%= f.file_field :pasta %></p>
  <p><%= f.submit "Upload Image" %></p>
<% end %>

<p><%= link_to "New Pantry", new_pantry_path %></p>
